server {
  listen 80 default_server;  
  listen [::]:80 default_server;
  root /var/www/hcportal;

  index index.php index.html index.htm;

  server_name _;

  location / {
    try_files $uri $uri/ /index.php;
  }

  location ~ \.php$ {
    include snippets/fastcgi-php.conf;
    fastcgi_pass unix:/var/run/php/php7.4-fpm.sock;
  }

  location ~ /\.ht {
    deny all;
  }
}
